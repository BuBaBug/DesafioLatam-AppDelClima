<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#A1E3F9"
    tools:context=".MainActivity">

    <!-- TÍTULO -->
    <TextView
        android:text="🌤️ Clima App 🌤️"
        android:fontFamily="@font/poppins_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:padding="14dp"
        android:elevation="4dp" />

    <!-- BÚSQUEDA DE CIUDAD -->
    <EditText
        android:id="@+id/etCiudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="🔍 Buscar Ciudad"
        android:inputType="text"
        android:fontFamily="@font/poppins_family"
        android:textSize="16sp"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:elevation="8dp"
        android:layout_marginBottom="12dp" />

    <!-- BOTONES: Buscar / Ubicación / Favoritos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="8dp">

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔍 Buscar Clima"
            android:backgroundTint="#3498DB"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_family"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnUbicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📍 Ubicación Actual"
            android:backgroundTint="#E67E22"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_family"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnFavoritos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="⭐ Like"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_family"/>

    </LinearLayout>


    <!-- INFORMACIÓN DEL CLIMA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_background"
        android:padding="24dp"
        android:elevation="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvTemperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🌡️ --°C"
            android:fontFamily="@font/poppins_family"
            android:textSize="54sp"
            android:textColor="#E74C3C"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏙️ Selecciona una ciudad"
            android:fontFamily="@font/poppins_family"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- CIUDADES FAVORITAS -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins_family"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="⭐ Ciudades Favoritas"
        android:textColor="#000000"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFavoritos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_background"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        tools:listitem="@android:layout/simple_list_item_1" />

    <!-- PRONÓSTICO EXTENDIDO -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPronostico"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_dia_pronostico" />

</LinearLayout>
